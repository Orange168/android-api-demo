<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
             android:layout_height="match_parent"
              android:layout_width="match_parent">
    <!-- above SDK 3.0 <fragment> recognize -->
    <fragment
        android:id="@+id/must_specify_unique_id_or_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/sample_fragment_layout"
        android:name="api.android.demo.uiadv.fragActivity.frag.ExampleFragment"/>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/replace_button"
        android:text="ReplaceFragment"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/replace_innerFragme"
        android:text="ReplaceFragment&lt;fragment&gt;"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_gravity="center"
        android:id="@+id/remove_innter_fragmet"
        android:text="remove&lt;fragment&gt;"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>


